<div id="like-<%= recipe.id %>" class="home-like">
	<% if recipe.favorited_by?(current_user) %>
	    <%= link_to recipe_favorites_path(recipe[:id]), method: :delete, remote: true do %>
	    <i class="fas fa-star" aria-hidden="true" style="color: gold;"></i>
	    <% end %>
	<% else %>
	    <%= link_to recipe_favorites_path(recipe.id), method: :post, remote: true do %>
	    <i class="far fa-star" aria-hidden="true"></i>
	    <% end %>
	<% end %>
</div>
