<div class="container-fluid body">
  <h2 class="heading">新規会員登録</h2>
<div class="row sign_up">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field devise_field first">
    <%= f.label :ニックネーム, class:"devise_label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field devise_field">
    <%= f.label :メールアドレス, class:"devise_label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field devise_field">
    <%= f.label :パスワード, class:"devise_label" %>
    <%= f.password_field :password, autocomplete: "new-password" %><br>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上で入力してください)</em>
    <% end %>
  </div>

  <div class="field devise_field">
    <%= f.label :パスワード確認, class:"devise_label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions devise_field">
    <%= f.submit "新規登録", class:"btn staut" %>
  </div>
<% end %>
<p class="actions devise_field bottom">または既に会員の方、観覧だけの場合は<%= link_to 'こちら', new_session_path(resource_name) %></p>
</div>
</div>

